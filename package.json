{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "build": "bun run build.ts",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "migrate": "bun src/scripts/migrate.ts",
    "migrate:up": "bun src/scripts/migrate.ts up",
    "migrate:down": "bun src/scripts/migrate.ts down",
    "migrate:status": "bun src/scripts/migrate.ts status",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "check": "biome check --write",
    "typecheck": "tsgo",
    "prepare": "husky",
    "db:migrate": "bun src/scripts/migrate.ts",
    "db:rollback": "bun src/scripts/migrate.ts down",
    "db:status": "bun src/scripts/migrate.ts status",
    "rpc:gen": "bun src/scripts/generate-rpc.ts"

  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.4",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "bun-plugin-tailwind": "^0.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.10.4",
    "lucide-react": "^0.545.0",
    "pino": "^10.1.0",
    "react": "^19",
    "react-dom": "^19",
    "react-hook-form": "^7.66.0",
    "react-router-dom": "^7.9.5",
    "tailwind-merge": "^3.3.1",
    "typeid-js": "^1.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript/native-preview": "^7.0.0-dev.20251113.1",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.6",
    "pino-pretty": "^13.1.2",
    "tailwindcss": "^4.1.11",
    "ts-morph": "^27.0.2",
    "ts-to-zod": "^5.1.0",
    "tw-animate-css": "^1.4.0",
    "vitest": "^4.0.8"
  }
}
